<!DOCTYPE html>
<html>
  <head>
	<title><%= title %></title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script>
		$(document).ready(function(){
			$('#btndemo').click(function(){
				var name = 'Huy';
				$.ajax({
					type : 'POST',
					dataType : 'text',
					url : '/handle',
					data : {name : name},
					success : function(data){
						console.log(data);
						$('#demo').html(data);
					}
				});
			});
		});
	</script>
</head>
  <body>
	  <button id="btndemo">Click Me</button>
	<div id="demo">chưa nhận được AJAX</div>
	  <% if( loggedin ) { %>
		<div>Đăng nhập thành công : <%= username%></div>
	  <% } else { %>
		<div>Chưa đăng nhập</div>
	  <% } %>
	<h1><%= title %></h1>
	<p>Welcome to <%= title %></p>
	<% include ./component/header %>	
	<div>
		<div class="container" id="title">
			<div class="row">
				<% include ./component/narbar %>
				<% include ./component/topSeller %>
			</div>
		</div>
	</div>
	<div class="container">
		<div style="margin-top: 20px; margin-bottom: 20px; color: white;font-family: serif;font-size: 20px;">
			<h2>Sản phẩm</h2>
		</div>
	</div>
	<!-- Display Item -->
	<div class="container">
		<div class="row" id="product">
			<div class="col col-8">
				<div id="content">
					<div class="container" id="product">
						<div class="row">
							<div class="col col-md-12">
								<div class="row">
									<% include ./component/displayitem %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<% include ./component/topview %>       		
		</div>
	</div>
	<!-- END -->
	<!-- Footer-->
	<% include ./component/footer %>
</body>
</html>
